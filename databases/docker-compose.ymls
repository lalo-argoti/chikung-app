version: "3.9"
services:
  db:
    image: postgres:15
    container_name: chikung_db
    restart: always
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: chikung
      POSTGRES_PASSWORD: chikung123
      POSTGRES_DB: chikungdb
    volumes:
      - db_data:/var/lib/postgresql/data
      - ./scripts/init.sql:/docker-entrypoint-initdb.d/init.sql

volumes:
  db_data:
